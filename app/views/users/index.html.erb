
<div class="digg_pagination">
    <%= will_paginate @user %>
    <%= form_tag(users_path, method: :get) do %>
      <%= text_field_tag :term, params[:term] %>
      <%= submit_tag 'Search', name: nil %>
    <% end %>
</div>

<% @user.each do |user| %> 
  <div class="border-form-div-1">
    <h2><%= link_to user.firstname + " " + user.name, user_path(user) %></h2>
    <p> <%= user.bund + " | " + "Aktiv seit: " + user.aktiv_seit.strftime("%d.%m.%Y").to_s %> 
  </div>  
<% end %>

<div class="digg_pagination">
    <%= will_paginate @user %>
</div>

